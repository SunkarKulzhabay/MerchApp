<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <EditText
        android:id="@+id/cashRegisterCountEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cash Register Count"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="12dp"
        android:backgroundTint="@color/primary_orange"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comment"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_below="@id/cashRegisterCountEditText"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/primary_orange"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/uploadCashPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="Upload Cash Photo"
        android:layout_below="@id/commentEditText"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/primary_orange"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/uploadZonePhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="Upload Zone Photo"
        android:layout_below="@id/uploadCashPhotoButton"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/primary_orange"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="Submit"
        android:layout_below="@id/uploadZonePhotoButton"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/primary_orange"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="Cancel"
        android:layout_below="@id/submitButton"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/gray"
        android:textColor="@color/white" />

</RelativeLayout>